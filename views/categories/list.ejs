<%- include('../partials/header') %>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <a href="/categories/create" class="btn btn-primary">+ Create New Categories</a>
  </div>

  <% if (categories.length > 0) { %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% categories.forEach(category => { %>
    <div class="col">
      <div
        class="card h-100 shadow-sm bg-light bg-opacity-75 border-0 rounded-4"
      >
        <div class="card-body">
          <h5 class="card-title"><%= category.name %></h5>
        </div>
        <div
          class="card-footer bg-transparent border-0 d-flex justify-content-end gap-2"
        >
          <a href="/categories/edit/<%= category.id %>" class="btn btn-warning btn-sm"
            >Edit</a
          >
          <a
            href="/categories/delete/<%= category.id %>"
            class="btn btn-danger btn-sm"
            onclick="return confirm('Are you sure you want to delete this category?')"
          >
            Delete
          </a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <div class="alert alert-info">No categories found.</div>
  <% } %>
</div>
