<%- include('../partials/header') %>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <!-- a tag method is always get method -->
    <a href="/users/create" class="btn btn-primary">+ Create New User</a>
  </div>

  <% if (users.length > 0) { %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% users.forEach(user => { %>
    <div class="col">
      <div
        class="card h-100 shadow-sm bg-light bg-opacity-75 border-0 rounded-4"
      >
        <div class="card-body">
          <h5 class="card-title"><%= user.name %></h5>
          <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
        </div>
        <div
          class="card-footer bg-transparent border-0 d-flex justify-content-end gap-2"
        >
          <a href="/users/edit/<%= user.id %>" class="btn btn-warning btn-sm"
            >Edit</a
          >
          <a
            href="/users/delete/<%= user.id %>"
            class="btn btn-danger btn-sm"
            onclick="return confirm('Are you sure you want to delete this user?')"
          >
            Delete
          </a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <div class="alert alert-info">No users found.</div>
  <% } %>
</div>
