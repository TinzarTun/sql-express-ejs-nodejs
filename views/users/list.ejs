<%- include('../partials/header') %>
<!-- a tag method is always get method -->
<a href="/users/create" class="btn btn-primary">Create New User</a>
<ul>
  <% if (users.length > 0) { %> <% users.forEach(user => { %>
  <li>
    <%= user.name %> - <%= user.email %>

    <a href="/users/edit/<%= user.id %>" class="btn btn-warning">Edit</a>
    <a
      href="/users/delete/<%= user.id %>"
      class="btn btn-danger"
      onclick="return confirm('Are you sure you want ot delete this user?')"
      >Delete</a
    >
  </li>
  <% }); %> <% } else { %>
  <li>No users found.</li>
  <% } %>
</ul>
